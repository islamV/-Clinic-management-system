<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="690.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clinicmanagementsystem.clinicmanagementsystem.MakeReportController">
   <children>
      <ImageView fitHeight="690.0" fitWidth="600.0" pickOnBounds="true">
         <image>
            <Image url="@../../../../../java/com/clinicmanagementsystem/clinicmanagementsystem/blurred-abstract-background-interior-view-looking-out-toward-empty-office-lobby-entrance-doors-glass-curtain-wall-with-frame.jpg" />
         </image>
      </ImageView>
      <Label fx:id="makeLabel" layoutX="31.0" layoutY="67.0" text="Make a report:">
         <font>
            <Font name="Arial Bold" size="25.0" />
         </font>
      </Label>
      <TextArea fx:id="reportArea" layoutX="31.0" layoutY="122.0" prefHeight="331.0" prefWidth="509.0" />
      <Button fx:id="submitButton" layoutX="140.0" layoutY="490.0" mnemonicParsing="false" onAction="#submitbutton" prefHeight="37.0" prefWidth="123.0" text="Submit">
         <font>
            <Font name="Arial Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="331.0" layoutY="490.0" mnemonicParsing="false" onAction="#backbutton" prefHeight="37.0" prefWidth="123.0" text="Back">
         <font>
            <Font name="Arial Bold" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
