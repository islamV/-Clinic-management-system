<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="690.0" style="-fx-background-color: #eef3fc;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clinicmanagementsystem.clinicmanagementsystem.DoctorDashboardController">

    <ToolBar prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: #1E88E5;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Clinic Management System" />
    </ToolBar>

    <AnchorPane prefHeight="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1E88E5;" text="Doctor Dashboard" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />
        <Label style="-fx-font-size: 16px; -fx-text-fill: #555;" text="Welcome, Doctor" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="30.0" />
        <Separator prefWidth="560.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />
    </AnchorPane>

    <AnchorPane prefHeight="480.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="120.0">
        <VBox layoutX="14.0" layoutY="50.0" spacing="20.0" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="20.0">
            <Button fx:id="make_reports_btn" onAction="#makeReports" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-size: 16px;" text="Make Reports" />
            <Button fx:id="view_reports_btn" onAction="#viewReports" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-size: 16px;" text="View Reports" />
            <Button fx:id="appointments_btn" onAction="#Appointments" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-size: 16px;" text="Appointments" />
         <Button fx:id="view_schedule_btn" layoutX="10.0" layoutY="80.0" onAction="#viewSchedule" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #1E88E5; -fx-text-fill: white; -fx-font-size: 16px;" text="View Schedule" />
            <Button fx:id="logout_btn" onAction="#logout" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 16px;" text="Logout" />
        </VBox>
    </AnchorPane>

</AnchorPane>
